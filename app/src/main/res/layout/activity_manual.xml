<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/account_DrawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acivities.AccountActivity">


    <ImageView
        android:id="@+id/account_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/imgapp" />


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/account_Menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.MoneySave.AppBarOverlay">

        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/manual_FAB_revenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="70dp"
                app:icon="@drawable/ic_revenue" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/manual_FAB_expenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="70dp"
                app:icon="@drawable/ic_revenue" />

        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/account_BottomNavigationView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:labelVisibilityMode="labeled"
                    app:menu="@menu/botton_bar_menu" />


        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/account_BottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            app:fabCradleMargin="20dp"
            app:fabAlignmentMode="center"
            app:fabCradleRoundedCornerRadius="10dp" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_anchor="@+id/appBarLayout2"
            app:layout_anchorGravity="center"
            app:popupTheme="@style/Theme.MoneySave.PopupOverlay"
            app:titleTextColor="#ECC089" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</androidx.drawerlayout.widget.DrawerLayout>
