<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="#F8C586"
    android:fitsSystemWindows="true"
    android:layoutDirection="rtl"
    tools:showIn="@layout/account_activity">

    <FrameLayout
        android:id="@+id/profile_FRM_nav"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/naviHeader_IMG_user"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"
            app:civ_border_color="#B2000000"
            app:civ_border_width="3dp" />


    </FrameLayout>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/header_TXT_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_FRM_nav"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp"
        android:text="Hello "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>